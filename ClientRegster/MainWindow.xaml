<Window x:Class="ClientRegster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientRegster"
        mc:Ignorable="d"
        Title="ClientRegister" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="buttonInputSchools" Height="20" Content="学校リストの読み込み" Click="buttonInputSchools_Click"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label Content="学校名" />
                <TextBox x:Name="textBoxSchoolName" />
                <ListBox x:Name="listBoxSchoolName"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Content="氏名" />
                <TextBox x:Name="textBoxStudentName" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
